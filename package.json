{
  "name": "@dxos/echo",
  "version": "0.1.0",
  "description": "Eventually Consistent Hierarchical Object Database.",
  "homepage": "https://github.com/dxos/echo#readme",
  "bugs": {
    "url": "https://github.com/dxos/echo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxos/echo.git"
  },
  "license": "GPL-3.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/semistandard/**",
      "**/eslint-config-semistandard/**",
      "**/eslint-config-standard/**",
      "**/eslint-config-standard-jsx/**",
      "**/eslint-plugin-standard/**",
      "**/standard-engine/**"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "pre-commit": [
    "lint:staged"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "depcheck": "lerna run depcheck",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "lint:staged": "lint-staged",
    "sort-package-json": "lerna exec npx sort-package-json",
    "validate": "npm ls"
  },
  "devDependencies": {
    "eslint": "^7.7.0",
    "husky": "^4.2.5",
    "lerna": "^3.11.1",
    "lint-staged": "^8.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
