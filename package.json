{
  "name": "@dxos/echo",
  "version": "1.0.0-beta.5",
  "description": "Eventually Consistent Hierarchical Object Database.",
  "homepage": "https://github.com/dxos/echo#readme",
  "bugs": {
    "url": "https://github.com/dxos/echo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxos/echo.git"
  },
  "license": "GPL-3.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "pre-commit": [
    "test",
    "lint:staged"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "depcheck": "lerna run depcheck",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "lint:staged": "lint-staged",
    "sort-package-json": "lerna exec npx sort-package-json"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.1.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "lerna": "^3.11.1",
    "lint-staged": "^8.1.0"
  }
}
