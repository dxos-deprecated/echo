{
  "name": "@dxos/echo-db",
  "version": "1.0.0-beta.8",
  "description": "ECHO database monorepo.",
  "homepage": "https://github.com/dxos/echo/tree/master/packages/echodb#readme",
  "bugs": {
    "url": "https://github.com/dxos/echo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxos/echo.git"
  },
  "license": "GPL-3.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:protobuf && npm run build:ts",
    "build:ts": "tsc",
    "build:protobuf": "pbjs -t json ./src/proto/echo.proto -o ./src/proto/gen/echo.json && pbjs -t static-module -w commonjs ./src/proto/echo.proto -o ./src/proto/gen/echo.js && pbts -o ./src/proto/gen/echo.d.ts ./src/proto/gen/echo.js",
    "clean": "del-cli dist",
    "depcheck": "npx depcheck --specials=bin,babel,eslint,lint-staged,jest",
    "coverage": "jest --coverage --verbose src",
    "lint": "eslint './src/**/*.ts'",
    "test": "jest --rootDir ./src --verbose",
    "posttest": "npm run lint",
    "prepublishOnly": "npm run test && npm run build",
    "watch": "babel-watch ./src --out-dir ./dist --source-maps"
  },
  "browserslist": [
    "> 5%"
  ],
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@dxos/codec-protobuf": "^1.1.0-beta.0",
    "@dxos/crypto": "^0.0.1",
    "@dxos/data-client": "^1.0.0-beta.0",
    "@types/debug": "^4.1.1",
    "@types/end-of-stream": "^1.4.0",
    "@types/node": "^14.0.9",
    "@types/stream-buffers": "^3.0.2",
    "js-data-structs": "^1.1.2",
    "@types/through2": "^2.0.36",
    "debug": "^4.1.1",
    "protobufjs": "^6.9.0",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "del-cli": "^3.0.0",
    "end-of-stream": "^1.4.4",
    "eslint-plugin-jest": "^23.13.1",
    "jest": "^24.8.0",
    "pumpify": "^2.0.1",
    "semistandard": "^14.2.0",
    "stream-buffers": "^3.0.2",
    "through2": "^3.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:jest/recommended",
      "eslint-config-semistandard"
    ],
    "rules": {
      "babel/semi": 1
    }
  }
}
