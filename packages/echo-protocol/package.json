{
  "name": "@dxos/echo-protocol",
  "version": "0.2.0-dev.1",
  "description": "ECHO protocol definitions and utilities.",
  "homepage": "https://github.com/dxos/echo/tree/master/packages/echo#readme",
  "bugs": {
    "url": "https://github.com/dxos/echo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxos/echo.git"
  },
  "license": "GPL-3.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "private": false,
  "scripts": {
    "build": "npm run clean && npm run build:protobuf && npm run build:ts",
    "build:ts": "tsc",
    "build:protobuf": "mkdir -p src/proto/gen && build-protobuf src/proto/defs/dxos.proto -s src/proto/substitutions.ts -o src/proto/gen",
    "clean": "del-cli dist src/proto/gen",
    "depcheck": "npx depcheck --specials=bin,babel,eslint,lint-staged,jest",
    "coverage": "jest --coverage --verbose src",
    "lint": "eslint './src/**/*.ts'",
    "test": "jest --rootDir=./src --verbose --passWithNoTests",
    "prepublishOnly": "npm run test && npm run build",
    "watch": "babel-watch src --out-dir ./dist --source-maps"
  },
  "browserslist": [
    "> 5%"
  ],
  "jest": {
    "preset": "ts-jest/presets/default",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@dxos/async": "^1.0.0-beta.8",
    "@dxos/codec-experimental-runtime": "^1.0.2",
    "@dxos/codec-protobuf": "^1.1.0-beta.0",
    "@dxos/credentials": "^2.0.0",
    "@dxos/crypto": "^1.0.0-beta.7",
    "@dxos/feed-store": "^1.2.0-beta.30",
    "@dxos/util": "^0.2.0-dev",
    "@types/debug": "^4.1.1",
    "@types/end-of-stream": "^1.4.0",
    "@types/lodash": "^4.14.159",
    "@types/node": "^14.0.9",
    "@types/readable-stream": "^2.3.9",
    "@types/stream-buffers": "^3.0.2",
    "@types/through2": "^2.0.36",
    "debug": "^4.1.1",
    "hypercore": "^7.7.1",
    "js-data-structs": "^1.1.2",
    "lodash.merge": "^4.6.2",
    "protobufjs": "^6.9.0",
    "readable-stream": "^3.6.0",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@dxos/codec-experimental-compiler": "^1.0.4",
    "@dxos/eslint-plugin": "^1.0.5",
    "@types/jest": "^25.2.3",
    "chance": "^1.1.6",
    "del-cli": "^3.0.0",
    "jest": "^26.2.2",
    "stream-buffers": "^3.0.2",
    "ts-jest": "^26.1.4",
    "typescript": "^4.0.2",
    "wait-for-expect": "^3.0.2"
  },
  "eslintConfig": {
    "extends": "plugin:@dxos/recomended",
    "ignorePatterns": [
      "src/proto/gen/*"
    ]
  }
}
